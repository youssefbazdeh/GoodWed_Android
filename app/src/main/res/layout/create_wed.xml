<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_wed_bg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1200dp"
    tools:context=".MarriageActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="148dp"
        android:textColor="@color/black"
        android:text="DONNEES PERSONNELLES"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/icooo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="244dp"
        android:text="Photo"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="154dp"
        android:text="Changez votre photo"
        android:textColor="@color/gray_600"/>

    <Button
        android:id="@+id/picbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:text="CHOISIR"
        android:textAllCaps="false"
        android:textSize="30px"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="PxUsage" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fullnameinputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:hint="Full Name"
        android:textColorHint="#8A47EB"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:helperText="*Required"
        app:helperTextTextColor="#8A47EB"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
        app:startIconTint="#8A47EB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullnameinputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="270dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/homme"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:buttonTint="#8A47EB"
            android:hint="Homme"
            android:textAlignment="center"
            android:textColorHint="#8A47EB" />

        <RadioButton
            android:id="@+id/femme"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:buttonTint="#8A47EB"
            android:textAlignment="center"
            android:hint="Femme"
            android:textColorHint="#8A47EB" />

        <RadioButton
            android:id="@+id/autre"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:buttonTint="#8A47EB"
            android:textAlignment="center"
            android:hint="Autre"
            android:textColorHint="#8A47EB" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="272dp"
        android:textColor="@color/black"
        android:text="PARTENAIRE"
        android:textSize="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/conjointinputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="267dp"
        android:hint="Full Name"
        android:textColorHint="#8A47EB"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:helperText="*Required"
        app:helperTextTextColor="#8A47EB"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
        app:startIconTint="#8A47EB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/conjoitinputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/sexep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="455dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/hommep"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:buttonTint="#8A47EB"
            android:textAlignment="center"
            android:hint="Homme"
            android:textColorHint="#8A47EB" />

        <RadioButton
            android:id="@+id/femmep"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:buttonTint="#8A47EB"
            android:hint="Femmer"
            android:textColorHint="#8A47EB" />

        <RadioButton
            android:id="@+id/autrep"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:buttonTint="#8A47EB"
            android:textAlignment="center"
            android:hint="Autre"
            android:textColorHint="#8A47EB" />
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailinputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="509dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="121dp"
        android:hint="Email"
        android:textColorHint="#8A47EB"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:helperText="*Required"
        app:helperTextTextColor="#8A47EB"
        app:startIconDrawable="@drawable/ic_baseline_mail_outline_24"
        app:startIconTint="#8A47EB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailinputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="304dp"
        android:textColor="@color/black"
        android:text="MARIAGE"
        android:textSize="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wedinputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="636dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:hint="Wedding Name"
        android:textColorHint="#8A47EB"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:helperText="*Required"
        app:helperTextTextColor="#8A47EB"
        app:startIconDrawable="@drawable/ic_baseline_mail_outline_24"
        app:startIconTint="#8A47EB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/wedinputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/pickDateBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="739dp"
        android:text="Date de la cérémonie"
        android:textAllCaps="false"
        android:textColor="#8A47EB"
        android:textSize="44px"
        android:textStyle="bold"
        app:cornerRadius="177dp"
        app:icon="@drawable/ic_baseline_calendar_month_24"
        app:iconTint="#8A47EB"
        app:strokeColor="#8A47EB"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="749dp"
        android:layout_marginEnd="10dp"
        android:text="dd-mm-yyyy"
        android:textColor="#8A47EB"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pickHourBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="799dp"
        android:layout_marginStart="10dp"
        android:text="Heure de la cérémonie"
        android:textAllCaps="false"
        android:textColor="#8A47EB"
        android:textSize="44px"
        android:textStyle="bold"
        app:cornerRadius="177dp"
        app:icon="@drawable/ic_baseline_watch_later_24"
        app:iconTint="#8A47EB"
        app:strokeColor="#8A47EB"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/heureTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="811dp"
        android:layout_marginEnd="10dp"
        android:text="00:00"
        android:textColor="#8A47EB"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/budinputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="867dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:hint="Budget total"
        android:textColorHint="#8A47EB"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:helperText="*Required"
        app:helperTextTextColor="#8A47EB"
        app:startIconTint="#8A47EB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/budinputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="969dp"
        android:background="@drawable/button_signup"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="44px"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="PxUsage" />


</RelativeLayout>
</ScrollView>